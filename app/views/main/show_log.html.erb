<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center py-4">
  <div class="d-block mb-4 mb-md-0">
    <nav aria-label="breadcrumb" class="d-none d-md-inline-block">
      <ol class="breadcrumb breadcrumb-dark breadcrumb-transparent">
        <li class="breadcrumb-item">
          <a href="#">
            <svg class="icon icon-xxs" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </a>
        </li>
        <li class="breadcrumb-item">
          <a href="#">Admin</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Piste d'audit</li>
      </ol>
    </nav>
    <h2 class="h4">Détails log</h2>
    <p class="mb-0">Back-Office LOTO GUINÉE-BISSAU</p>
  </div>
</div>
<div class="card card-body border-0 shadow w-75">
  <h2 class="h4 mb-4">Détails log - <span class="ms-3 h5"> N° <%= @log.identifier %> </span></h2>
  <div class="w-75">
    <div class="row mb-1">
      <div class="col-md-3 fw-bold">
        Module:
      </div>
      <div class="col-md-9">
        <%= @log.module_title %>
      </div>
    </div>
    <div class="row mb-1">
      <div class="col-md-3 fw-bold">
        Tag:
      </div>
      <div class="col-md-9">
        <%= display_log_tag(@log.tag_title).html_safe %>
      </div>
    </div>
    <div class="row mb-1">
      <div class="col-md-3 fw-bold">
        Date:
      </div>
      <div class="col-md-9">
        <%= @log.created_at.strftime("%d/%m/%Y - %R") %>
      </div>
    </div>
    <div class="row mb-1">
      <div class="col-md-3 fw-bold">
        Utilisateur:
      </div>
      <div class="col-md-9">
        <%= @log.user.email + ' - ' + @log.user.fullname %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3 fw-bold">
        Adresse IP:
      </div>
      <div class="col-md-9">
        <%= @log.user_ip %>
      </div>
    </div>
    <div class="row">
      <div class="col mb-3">
        <h5 class="h5 mb-1">Contenu:</h5>
        <blockquote class="blockquote">
          <p><%= @log.description %></p>
        </blockquote>
      </div>
    </div>
  </div>
   <div class="row mt-3 w-50">
      <div class="col offset-md-3">
        <%= link_to(url_for(audit_path), class: 'btn btn-sm btn-white') do %>
                    Retour
                  <%end%>
      </div>
    </div>
</div>