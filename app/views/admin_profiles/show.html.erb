<div class="card card-body border-0 shadow w-100">
  <h2 class="h4 mb-4">Modification de profil</h2>
  <%= form_with model: @profile, url: admin_profile_path, method: :patch, local: true do |f| %>
    <div class="row">
      <div class="col-md-6 mb-3">
        <div class="form-group">
          <%= f.label :title, "Nom du profil" %>
          <%= f.text_field :title, class: 'form-control', required: true, placeholder: "Nom du profil" %>
        </div>
      </div>
    </div>
    <hr>
    <div class="row">
    <h5 clas="h5 mb-3">Habilitations</h5>
      <% @abilities.each do |tag, tag_abilities| %>
        <% if tag_abilities.present? %>
          <div class="col-md-4 mb-3">
            <fieldset>
              <legend>
                <code><%= tag %></code>
              </legend>
              <% tag_abilities.each do |ability| %>
                <div class="form-check form-switch">
                  <%= ability_checkbox(@profile_abilities, ability.id) %>
                  <label id='admin_ability_ids[]' class="form-check-label">
                    <%= ability.title %>
                  </label>
                </div>
              <% end %>
            </fieldset>
          </div>
        <% end %>
      <% end %>
      
    </div>

    <div class="row mt-3 w-50">
      <div class="col">
        <%= f.submit 'Enregistrer', class: 'btn btn-sm btn-primary'%>
      </div>
      <div class="col">
        <%= link_to(url_for(admin_profiles_path), class: 'btn btn-sm btn-white') do %>
                    Retour
                  <%end%>
      </div>
    </div>
  <% end %>
</div>