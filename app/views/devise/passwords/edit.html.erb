<main>
    <!-- Section -->
    <section class="vh-lg-100 mt-5 mt-lg-0 bg-soft d-flex align-items-center">
        <div class="container">
            <div class="row justify-content-center form-bg-image">
                <p class="text-center">
                  <%= link_to new_user_session_path, class: 'd-flex align-items-center justify-content-center' do %>
                    <svg class="icon icon-xs me-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M7.707 14.707a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l2.293 2.293a1 1 0 010 1.414z" clip-rule="evenodd"></path></svg>
                    Se connecter
                  <% end %>
                </p>
                <div class="col-12 d-flex align-items-center justify-content-center">
                    <div class="signin-inner my-3 my-lg-0 bg-white shadow border-0 rounded p-4 p-lg-5 w-100 fmxw-500">
                        <h1 class="h3">Changer le mot de passe</h1>
                        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, 'data-turbo' => "false" }) do |f| %>
                          <%= f.hidden_field :reset_password_token %>
                            <!-- End of Form -->
                            <!-- Form -->
                            <div class="form-group mb-4">
                              <%= f.label :password, 'Mot de passe' %>
                              <% if @minimum_password_length %>
                                  <em class="text-dark">(<%= @minimum_password_length %> caractères minimum)</em>
                              <% end %>
                              <div class="input-group">
                                <span class="input-group-text" id="basic-addon2">
                                  <svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                                  </svg>
                                </span>
                                <%= f.password_field :password, autofocus: true, autocomplete: true, required: true, class: 'form-control' %>
                              </div>
                            </div>
                            <!-- End of Form -->
                            <!-- Form -->
                            <div class="form-group mb-4">
                              <%= f.label :password_confirmation, 'Mot de passe' %>
                              <div class="input-group">
                                <span class="input-group-text" id="basic-addon2">
                                  <svg class="icon icon-xs text-gray-600" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd"></path>
                                  </svg>
                                </span>
                                <%= f.password_field :password_confirmation, autocomplete: true, required: true, class: 'form-control' %>
                              </div>
                            </div>
                            <!-- End of Form -->
                            <!-- End of Form -->
                            <div class="d-grid">
                                <%= f.submit "Réinitialiser le mot de passe", class: 'btn btn-gray-800' %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>