    var flashMessage = '<%= "<strong>#{flash[:notice]}</strong>".html_safe %>';
    window.Swal.fire({width: 600, icon: 'success', title: "Succ√®s!", html: flashMessage, timer: 7000, type: "success", showCloseButton: true, allowOutsideClick: true});
  <% end %>
<% end %>
