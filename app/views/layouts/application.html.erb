      (function() {
        var selectStatesInputMult = document.querySelector('.choices-multiple');
        if (selectStatesInputMult) {
          var Choices = window.Choices;
          var choicesElt = new Choices('.choices-multiple');
        }

        var Datepicker = window.vanillajsDatepicker.Datepicker;
        Datepicker.locales.fr = {
          days: ["Dimanche", "Lundi", "mardi", "Mercredi", "Jeudi", "Vendredi", "Samedi"],
          daysShort: ["Dim.", "Lun.", "Mar.", "Mer.", "Jeu.", "Ven.", "Sam."],
          daysMin: ["D", "L", "Ma", "Me", "J", "V", "S"],
          months: ["Janvier", "Février", "Mars", "Avril", "Mai", "Juin", "Juillet", "Août", "Septembre", "Octobre", "Novembre", "Décembre"],
          monthsShort: ["Jan.", "Févr.", "Mars", "Avril", "Mai", "Juin", "Juil.", "Août", "Sept.", "Oct.", "Nov.", "Déc."],
          today: "Aujourd'hui",
          monthsTitle: "Mois",
          clear: "Effacer",
          weekStart: 1,
          format: "dd/mm/yyyy"
        };
        var datepickers = [].slice.call(document.querySelectorAll('[data-datepicker]'))
        var datepickersList = datepickers.map(function (el) {
            return new Datepicker(el, {
                buttonClass: 'btn',
                format: 'dd/mm/yyyy',
                language: 'fr',
                minDate: new Date()
            });
        });
        window.datepickersList = datepickersList;

        var dateFieldStart = document.getElementById('date-field-start');
        var dateFieldEnd = document.getElementById('date-field-end');
        if (dateFieldStart && dateFieldEnd) {
          dateFieldStart.addEventListener('change', event => {
            dateFieldEnd.min = event.target.value;
          });

          dateFieldEnd.addEventListener('change', event => {
            dateFieldStart.max = event.target.value;
          });
        }
        


        
      })();

    </script>
