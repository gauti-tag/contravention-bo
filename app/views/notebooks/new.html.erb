<div class="card card-body border-0 shadow w-75">
  <h2 class="h5 mb-4">Création de Carnet</h2>
  <%= form_with model: @notebook, url: create_notebooks_path, local: true do |f| %>
    <div class="row">
      <div class="col-md-6 mb-3">
        <div class="form-group">
          <%= f.label :number, "N° de carnet" %>
          <%= f.text_field :number , class: 'form-control', required: true, placeholder: "Ex: 00000" %>
        </div>
      </div>
        </div>
    <div class="row">
      <div class="col-md-6 mb-3">
        <div class="form-group">
          <%= f.label :label, "Libéllé" %>
          <%= f.text_field :label, class: 'form-control', required: true, placeholder: "Libellé du carnet", title: "" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 mb-3">
        <div class="form-group">
          <%= f.label :sheets, "Feuillets" %>
          <%= f.number_field :sheets, class: 'form-control', placeholder: "Entrez le nombre de feuillets" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 mb-3">
        <div class="form-group">
         <%= f.label :contravention_group_id, "Classe" %>
          <%= f.select :contravention_group_id, @groups_for_notebook, { include_blank: "Sélectionnez une classe" }, class: 'form-select mb-0'%>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 mb-3">
        <div class="form-group">
         <%= f.label :agent_id, "Agent" %>
          <%= f.select :agent_id, @agents_for_notebook, { include_blank: "Sélectionnez une classe" }, class: 'form-select mb-0'%>
        </div>
      </div>
    </div>
    <div class="row mt-3 w-50">
      <div class="col">
        <%= f.submit 'Enregistrer', class: 'btn btn-sm btn-primary'%>
      </div>
      <div class="col">
        <%= link_to(url_for(notebooks_path), class: 'btn btn-sm btn-white') do %>
                    Retour
                  <%end%>
      </div>
    </div>
  <% end %>
</div>